import socket, struct, os, sys, hashlib, pyfiglet, readline, cryptography
from cryptography.fernet import Fernet
def loadKey(name):
	try:
		return open(name, "rb").read()
	except FileNotFoundError:
		print("\033[91m< KEY: 404: MISSING KEY FILE! >\033[0m")
